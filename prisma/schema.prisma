generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  userId   String @unique @default(uuid())
  name     String
  lastName String
  email    String @unique
  password String

  projects Project[]
}

model Project {
  id Int @id @default(autoincrement())

  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  categoryId Int

  user   User? @relation(fields: [userId], references: [id])
  userId Int?

  previewImage   Media? @relation("previewImage", fields: [previewImageId], references: [id])
  previewImageId Int?   @unique

  video   Media? @relation("video", fields: [videoId], references: [id])
  videoId Int?   @unique

  images Media[]

  translations ProjectTranslation[]
}

model ProjectTranslation {
  id          Int     @id @default(autoincrement())
  title       String
  description String
  year        String
  medium      String?
  dimensions  String?
  duration    String?

  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId Int

  language   Language @relation(fields: [languageId], references: [id])
  languageId Int
}

model Category {
  id Int @id @default(autoincrement())

  project      Project[]
  translations CategoryTranslation[]
}

model CategoryTranslation {
  id   Int    @id @default(autoincrement())
  name String

  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  categoryId Int

  language   Language @relation(fields: [languageId], references: [id])
  languageId Int
}

model Language {
  id     Int    @id @default(autoincrement())
  name   String
  locale String

  projectTranslation  ProjectTranslation[]
  categoryTranslation CategoryTranslation[]
}

model Media {
  id        Int    @id @default(autoincrement())
  publicUrl String
  path      String @unique

  previewImageProject Project? @relation("previewImage")
  videoProject        Project? @relation("video")

  project   Project? @relation(fields: [projectId], references: [id])
  projectId Int?
}
